{
	"name": "arquitetura-civica",
	"version": "0.1.0",
	"description": "Arquitetura c√≠vica luso-brasileiras",
	"keywords": [
		"casa",
		"galeria",
		"base de dados",
		"arquitetura tradicional"
	],
	"author": "Pedro P. Palazzo",
	"license": "CC_BY",
	"repository": "arqtrad/arquitetura-civica",
	"main": "index.js",
	"scripts": {
		"11ty": "npx @11ty/eleventy",
		"dev": "npx @11ty/eleventy --serve",
		"css": "npm-run-all css-compile css-prefix",
		"css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules _scss/:assets/css/",
		"css-lint": "stylelint _scss/",
		"css-prefix": "postcss --replace assets/css/styles.css --use autoprefixer --map",
		"watch": "nodemon -e html,scss -x \"npm run css\"",
		"start": "npm-run-all --parallel watch dev",
		"build": "npm-run-all css 11ty",
		"test": "npm-run-all css-lint css"
	},
	"devDependencies": {
		"@11ty/eleventy": "^2.0.1",
		"@11ty/eleventy-fetch": "^4.0.0",
		"@11ty/eleventy-img": "^3.1.8",
		"@11ty/eleventy-plugin-rss": "^1.2.0",
		"@knight-lab/timelinejs": "^3.9.3",
		"@popperjs/core": "^2.11.8",
		"autoprefixer": "^10.4.17",
		"bootstrap": "^5.3.3",
		"bootstrap-icons": "^1.11.3",
		"country-code-emoji": "^2.3.0",
		"eleventy-plugin-dynamic-categories": "^0.1.5",
		"jquery": "^3.7.1",
		"js-yaml": "^4.1.0",
		"leaflet": "^1.9.4",
		"luxon": "^3.4.4",
		"moment": "^2.30.1",
		"node-pandoc": "^0.3.0",
		"nodemon": "^3.0.3",
		"npm-run-all": "^4.1.5",
		"path": "^0.12.7",
		"popper": "^1.0.1",
		"postcss": "^8.4.33",
		"postcss-cli": "^11.0.0",
		"sass": "^1.70.0",
		"stylelint": "^16.2.1",
		"stylelint-config-twbs-bootstrap": "^14.0.0"
	}
}
